<div class="absolute top-0 left-0 right-0 h-96 bg-gradient-to-b from-gold/5 to-transparent"></div>
</div>

<Header />

<section id="inicio" class="relative min-h-screen flex items-center pt-20">
<div class="absolute inset-0">
<picture>
<source srcset="/assets/slider-1.avif" type="image/avif" />
<source srcset="/assets/slider-1.webp" type="image/webp" />
